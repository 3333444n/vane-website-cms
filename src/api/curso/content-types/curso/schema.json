      "type": "richtext"
    },
    "cta_text": {
      "type": "string"
    },
    "cta_button_text": {
      "type": "string"
    },
    "cta_button_link": {
      "type": "string"
    },
    "cta_date": {
      "type": "date"
    },
    "testimonials": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::testimonial.testimonial",
      "mappedBy": "cursos"
    },
    "faqs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::faq.faq",
